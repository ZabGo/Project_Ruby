<h1>update <% @product.name %></h1>

<form class="" action="/product/<%= @product.id %>" method="post">

  <label for="name-input">Name</label>
  <input type="text" name="name" id="name-input" value="<%= @product.name %>"><br>

  <label for="type-input">Type</label>
  <select name="type" id="type-input" >
    <% @type.each do|type| %>
      <% if type.id.to_i == @product.type %>
        <option value="<%= type.id %>" selected><%= type.name %></option>
      <% else %>
        <option value="<%= type.id %>"><%= type.name %></option>
      <% end %>
    <% end %>
  </select><br>

  <label for="quantity-input">Quantity</label>
  <input type="number" name="quantity" min=0 id="quantity-input" value="<%= @product.quantity %>"><br>

  <label for="buying_cost-input">Buying Cost</label>
  <input type="text" name="buying_cost" id="buying_cost-input" value="<%= @product.buying_cost %>"><br>

  <label for="selling_price-input">Selling Price</label>
  <input type="text" name="selling_price" id="selling_price-input" value="<%= @product.selling_price %>"><br>

  <label for="manufacturer-input">Manufacturer</label>
  <select name="manufacturer_id" id="manufacturer-input" selected="@product.manufacturer_id">
    <% @manufacturer.each do|manufacturer| %>
      <% if manufacturer.id == @product.manufacturer_id %>
        <option value="<%= manufacturer.id %>" selected><%= manufacturer.name %></option>
      <% else %>
        <option value="<%= manufacturer.id %>"><%= manufacturer.name %></option>
      <% end %>
    <% end %>
  </select><br>

  <label for="description-input">description</label><br>
  <textarea name="description" rows="10" cols="30" id="description-input"><%= @product.description %></textarea><br>

  <input type="submit" value="Update">
</form>
